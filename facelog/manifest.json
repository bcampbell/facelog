{

  "description": "logs all facebook news items",
  "manifest_version": 2,
  "name": "FaceLog",
  "version": "1.0",
  "homepage_url": "http://scumways.com",
  "icons": {
    "48": "icons/facelog-48.png"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": { "19": "icons/facelog-48.png" },
    "default_title": "Facelog"
  }
}
